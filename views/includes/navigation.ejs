            </li>
            <li class="mobile-nav__list-item">
                <a class="<%= path === '/admin/products' ? 'active' : '' %> mobile-nav__list-link" href="/admin/products">Admin Products
                </a>
            </li>
        <% } %>
        <% if (!isAuthenticated) { %>
            <li class="mobile-nav__list-item">
                <a class="<%= path === '/login' ? 'active' : '' %> mobile-nav__list-link" href="/login">Login</a>
            </li>
