<div class="backdrop"></div>
<header class="header">
    <div class="menu-btn">
        <span class="menu-btn__burger">Menu</span>
    </div>
    <nav class="nav">
        <ul class="nav__list">
            <li class="nav__list-item">
                <a class="<%= path === '/' ? 'active' : '' %> nav__list-link" href="/">Home</a>
            </li>
            <li class="nav__list-item">
                <a class="<%= path === '/products' ? 'active' : '' %> nav__list-link" href="/products">Products</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="nav__list-item">
                    <a class="<%= path === '/cart' ? 'active' : '' %> nav__list-link" href="/cart">Cart</a>
                </li>
                <li class="nav__list-item">
                    <a class="<%= path === '/orders' ? 'active' : '' %> nav__list-link" href="/orders">Orders</a>
                </li>
                <li class="nav__list-item">
                    <a class="<%= path === '/admin/add-product' ? 'active' : '' %> nav__list-link" href="/admin/add-product">Add Product
                    </a>
                </li>
                <li class="nav__list-item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %> nav__list-link" href="/admin/products">Admin Products
                    </a>
                </li>
            <% } %>
        </ul>
        <ul class="nav__list">
            <% if (!isAuthenticated) { %>
                <li class="nav__list-item">
                    <a class="<%= path === '/login' ? 'active' : '' %> nav__list-link" href="/login">Login</a>
                </li>
                <li class="nav__list-item">
                    <a class="<%= path === '/signup' ? 'active' : '' %> nav__list-link" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="nav__list-item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

